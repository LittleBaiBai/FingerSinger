<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FF000000">
    
    <ListView
        android:id="@+id/list_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textColor="@android:color/background_light" 
        android:visibility="gone">
    </ListView>
    
    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
        android:background="#00000000" >
		     
  	  	<ImageButton
        	android:id="@+id/button_page_left"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentBottom="true"
        	android:orientation="horizontal" 
        	android:src="@drawable/button_page_left" 
        	android:background="#00000000"
        	android:contentDescription="@string/button_page_left" >
    	</ImageButton>

    	<ImageButton
        	android:id="@+id/button_page_right"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_alignParentBottom="true"
        	android:layout_alignParentRight="true"
        	android:orientation="horizontal" 
        	android:src="@drawable/button_page_right" 
        	android:background="#00000000"
        	android:contentDescription="@string/button_page_right">
    	</ImageButton>
    
    	<LinearLayout 
    	    android:id="@+id/button_layout"
    	    android:orientation="horizontal"
    	    android:layout_alignParentBottom="true"
    	    android:layout_centerHorizontal="true"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
        	android:background="#00000000">
    	     
    		<ImageButton
        		android:id="@+id/button_status"
        		android:layout_width="76dp"
        		android:layout_height="match_parent"
        		android:orientation="horizontal" 
        		android:src="@drawable/button_status_draw" 
        		android:background="#00000000"
        		android:contentDescription="@string/button_menu">
    		</ImageButton>
    
    		<ImageButton
        		android:id="@+id/button_color"
        		android:layout_width="76dp"
        		android:layout_height="match_parent"
        		android:orientation="horizontal" 
        		android:src="@drawable/button_color_green" 
        		android:background="#00000000"
        		android:contentDescription="@string/button_color">
    		</ImageButton>
    
    		<ImageButton
        		android:id="@+id/button_menu"
        		android:layout_width="76dp"
        		android:layout_height="match_parent"
        		android:orientation="horizontal" 
        		android:src="@drawable/button_main_menu" 
        		android:background="#00000000"
        		android:contentDescription="@string/button_menu">
    		</ImageButton>
    
    		<ImageButton
        		android:id="@+id/button_play_current"
        		android:layout_width="76dp"
        		android:layout_height="match_parent"
        		android:orientation="horizontal" 
        		android:src="@drawable/button_play_current" 
        		android:background="#00000000"
        		android:contentDescription="@string/button_play_current">
    		</ImageButton>
    
    		<ImageButton
        		android:id="@+id/button_undo"
        		android:layout_width="76dp"
        		android:layout_height="match_parent"
        		android:orientation="horizontal" 
        		android:src="@drawable/button_undo" 
        		android:background="#00000000"
        		android:contentDescription="@string/button_undo">
    		</ImageButton> 	        	    
    	</LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/view_draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_bar"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/seekbars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_bar"
        android:background="#80000000"
        android:orientation="vertical" 
        android:visibility="gone">
        
        <LinearLayout
            android:id="@+id/voice_seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >
            
            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/green"
                android:max="10"
                android:progress="8" />
	
			<SeekBar
			    android:id="@+id/seekBar2"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_marginTop="20dp"
			    android:background="@color/yellow"
			    android:max="20"
			    android:progress="16" />
			
			<SeekBar
			    android:id="@+id/seekBar3"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_marginTop="15dp"
			    android:background="@color/red"
			    android:max="100"
			    android:progress="80" />
			
			<SeekBar
			    android:id="@+id/seekBar4"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_marginTop="15dp"
			    android:background="@color/blue"
			    android:max="100"
			    android:progress="80" />
		
			<SeekBar
			    android:id="@+id/seekBar5"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_marginTop="15dp"
			    android:background="@color/purple"
			    android:max="100"
			    android:progress="80" />			
        </LinearLayout>

		<EditText
		    android:id="@+id/editText1"
		    android:layout_width="50dp"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/editText2"
		    android:layout_alignTop="@+id/voice_seek"
		    android:layout_marginTop="20dp"
		    android:background="#00000000"
		    android:ems="10"
		    android:enabled="false"
		    android:inputType="text"
		    android:text="@string/text_yin"
		    android:textColor="#FFFFFFFF"
		    android:textSize="50sp" />

		<EditText
		    android:id="@+id/editText2"
		    android:layout_width="50dp"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/voice_seek"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="20dp"
		    android:layout_marginBottom="20dp"
		    android:background="#00000000"
		    android:ems="10"
		    android:enabled="false"
		    android:inputType="text"
		    android:text="@string/text_liang"
		    android:textColor="#FFFFFFFF"
		    android:textSize="50sp" />

		<com.game.fingersinger.VerticalSeekBar
		    android:id="@+id/speedBar"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_above="@+id/editText3"
		    android:layout_alignLeft="@+id/editText3"
		    android:layout_alignTop="@+id/voice_seek"
		    android:layout_marginLeft="15dp"
		    android:layout_marginTop="5dp"
		    android:max="80"
		    android:progress="20" />

		<EditText
		    android:id="@+id/editText3"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/voice_seek"
		    android:layout_alignParentRight="true"
		    android:background="#00000000"
		    android:ems="10"
		    android:enabled="false"
		    android:inputType="text"
		    android:text="@string/text_speed"
		    android:textColor="#FFFFFFFF"
		    android:textSize="30sp" />
		
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/menu_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/menu_bar"
        android:visibility="gone">
		
        <ImageView 
            android:id="@+id/menu_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_arrow"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/menu_des"/>
        
        <LinearLayout
            android:id="@+id/menu_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_background"
            android:layout_marginTop="3dp"
            android:layout_above="@+id/menu_arrow"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
		    
            <LinearLayout 
                android:id="@+id/menu_row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal">
	                  
	    		<ImageButton
	        		android:id="@+id/menu_play_whole"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
                	android:layout_marginLeft="4dp"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_play_whole" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 	
	    		
	    		<ImageButton
	        		android:id="@+id/menu_save"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_save" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 	
	    		
	    		<ImageButton
	        		android:id="@+id/menu_new"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_new" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 		    		
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/menu_row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal">
	            
	    		<ImageButton
	        		android:id="@+id/menu_history"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
                	android:layout_marginLeft="4dp"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_history" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 	
	    		   
	    		<ImageButton
	        		android:id="@+id/menu_audio_output"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_audio_output" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 	
	    		
	    		<ImageButton
	    		    android:id="@+id/menu_audio_render"
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
	    		    android:background="#00000000"
	    		    android:contentDescription="@string/menu_des"
	    		    android:orientation="horizontal"
	    		    android:src="@drawable/menu_audio_render" >
	    		</ImageButton> 	    		
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/menu_row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal">
	                
	    		<ImageButton
	        		android:id="@+id/menu_image_import"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
                	android:layout_marginLeft="4dp"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_image_import" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 	
	    		
	    		<ImageButton
	        		android:id="@+id/menu_help"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="horizontal" 
	        		android:src="@drawable/menu_help" 
	        		android:background="#00000000"
	        		android:contentDescription="@string/menu_des">
	    		</ImageButton> 
	
	    		<ImageButton
	    		    android:id="@+id/menu_about"
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="wrap_content"
	    		    android:background="#00000000"
	    		    android:contentDescription="@string/menu_des"
	    		    android:orientation="horizontal"
	    		    android:src="@drawable/menu_about" >
	    		</ImageButton>  
            </LinearLayout>		
        </LinearLayout>    
	</RelativeLayout>
    
    <ImageView
        android:id="@+id/pointer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:visibility="gone"
	    android:background="#00000000"
        android:src="@drawable/pointer_unpress" 
        android:contentDescription="@string/button_pointer"/>
  
    <EditText
	    android:id="@+id/name_editor"  
	    android:layout_width="match_parent"  
	    android:layout_height="wrap_content" 
	    android:imeOptions="actionDone"
	    android:singleLine="true" 
	    android:inputType="text"
	    android:visibility="gone">  
	</EditText>  
  
</RelativeLayout>